@using WeSiteBanSach.Models;
@model List<Sach>


@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2>SachTheoChuDe</h2>

@if (Model.Count == 0)
{
    <h2>Không có sách nào thuộc chủ đề này :D</h2>
}
<div id="divBody">
    @{  int i = 0;}
    @foreach (var item in Model)
    {
        i++;
        <div id="SanPham">
            <div id="AnhBia">
                <img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="90" height="130" />
            </div>
            <div id="TenSach">
                @item.TenSach
            </div>
            <div id="DonGia">
                @item.GiaBan
            </div>
        </div>
        if (i % 3 == 0)
        {
            <div style="clear:both"></div>
        }
    }
</div>